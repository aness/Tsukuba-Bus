<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aness.tsukubabus.display_timetable"
    android:orientation="vertical"
    android:focusable="false"
    android:background="#ff1976d2"
    android:tileMode="repeat"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="  University Bus"
        android:id="@+id/textView3"
        android:clickable="true"
        android:onClick="getlist"
        android:focusable="false"
        android:background="#ffff9800"
        android:backgroundTintMode="src_atop"
        android:textColor="#ff000000"
        android:paddingLeft="30dp"
        android:paddingBottom="5dp"
        android:typeface="serif" />


    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Day, "
        android:id="@+id/switch1"
        android:textOff="Weekdays"
        android:textOn="Weekend &amp; Holidays"
        android:maxHeight="25dp"
        android:height="25dp"
        android:onClick="set_changes"
        android:background="#ff1976D2"
        android:textColor="#ffffffff" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@android:id/list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff2196f3"
        android:alpha="1"
        android:backgroundTintMode="multiply"
        android:clickable="true" />

</LinearLayout>
