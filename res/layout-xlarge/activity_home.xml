<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aness.tsukubabus.display_timetable"
    android:orientation="vertical"
    android:focusable="false">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The University of Tsukuba Bus"
        android:id="@+id/textView3"
        android:clickable="true"
        android:onClick="getlist"
        android:focusable="false" />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@android:id/list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="During Weekdays"
        android:id="@+id/switch1"
        android:layout_gravity="center_horizontal"
        android:textOff="Weekdays"
        android:textOn="Weekend &amp; Holidays" />

</LinearLayout>
